{ form }         = require './DOM'
HiddenFormInputs = require './hidden_form_inputs'
SubmitButton     = require './submit_button'

RailsForm = (props, inputs...) ->
  { action, csrf, method, submitValue } = props

  form
    acceptCharset : 'UTF-8'
    action        : action
    method        : 'post'
    HiddenFormInputs
      csrf   : csrf
      method : method
    inputs...
    SubmitButton submitValue 

module.exports = RailsForm
